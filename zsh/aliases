# ~~~~~~~~~~~~
# Zsh aliases
# ~~~~~~~~~~~~

# Disabled hub alias because it prevents git completion from working
# https://github.com/robbyrussell/oh-my-zsh/issues/766
#alias git=hub   

case $OSTYPE in
  linux-gnu)
    alias pbcopy='xsel --clipboard --input'
    alias pbpaste='xsel --clipboard --output'
    alias lf='ls -CF --color'
  ;;
  darwin*)
    # Colored up cat!
    # You must install Pygments first - "sudo easy_install Pygments"
    # Source: https://github.com/barryclark/bashstrap 
    alias c='pygmentize -O style=monokai -f console256 -g'
    alias ls='ls -G'
    alias ll='ls -lG'
    alias lf='ls -CFG'

    # Show/hide hidden files in MacOS Finder
    alias showFiles='defaults write com.apple.finder AppleShowAllFiles YES; killall Finder /System/Library/CoreServices/Finder.app'
    alias hideFiles='defaults write com.apple.finder AppleShowAllFiles NO; killall Finder /System/Library/CoreServices/Finder.app'
  ;;
esac

alias t=task
alias ddu='du --max-depth=1 -h'
alias dul='du -sch .!(.) * | sort -h'
alias lvim='vim -c "normal '\''0"'
alias gs='git status -sb'
alias vi=vim

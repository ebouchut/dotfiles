alias ls='ls --color'
alias l='ls --color'
alias ll='ls --color -l'
alias lf='ls --color -CF'
alias la='ls --color -a'
alias ddu='du --max-depth=1 -h'
alias grep='grep --color=auto'

alias pbcopy='xsel --clipboard --input'
alias pbpaste='xsel --clipboard --output'

alias git=hub  # Requires hub: http://defunkt.io/hub/
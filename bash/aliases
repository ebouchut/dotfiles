case $OSTYPE in
  "linux-gnu") 
    alias ls='ls --color'
    alias ll='ls --color -l'
    alias lf='ls --color -CF'
    alias la='ls --color -a'
    alias grep='grep --color=auto'

    alias pbcopy='xsel --clipboard --input'
    alias pbpaste='xsel --clipboard --output'
  ;;
esac

alias ddu='du --max-depth=1 -h'
alias git=hub  # Requires hub: http://defunkt.io/hub/


# Emacs: Source: https://github.com/JEG2/dotfiles/blob/master/bash/aliases
function e() {
  if [ "$1" == "-" ]; then
    TMP="$(mktemp /tmp/emacsstdin-XXXXXX)"
      cat >$TMP
      emacsclient -a "" $TMP
      rm $TMP
      elif [ -z "$1" ]; then
      emacsclient -a "" -t $@
  else
    emacsclient -a "" $@
      fi
}

# inside Emacs terminals
if [ -n "$EMACS" ]; then
  alias ri="PAGER='less -R' ri -f ansi"
  alias ssh="TERM=xterm ssh"
fi
